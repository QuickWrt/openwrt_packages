name: Build OpenWrt Packages

on:
  workflow_dispatch:

jobs:
  build:
    name: Build ${{ matrix.arch }}-${{ matrix.tag }}
    runs-on: ubuntu-24.04
    strategy:
      fail-fast: false
      matrix:
        arch:
          - aarch64_cortex-a53
          - aarch64_generic
          - x86_64
        tag:
          - openwrt-24.10
          
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Hack daed packages
        run: |
          sed -i 's/$(BPF_DEPENDS)//g' daed/Makefile || true

      - name: Free disk space
        run: |
          sudo rm -rf /usr/lib/{jvm,llvm} /usr/local /usr/src/* /var/lib/gems /var/lib/mysql /var/lib/snapd /etc/skel /opt/{microsoft,az,hostedtoolcache,cni,mssql-tools,pipx} /usr/share/{az*,dotnet,swift,miniconda,gradle*,java,kotlinc,ri,sbt} /root/{.sbt,.local,.npm} /usr/libexec/gcc/x86_64-linux-gnu/14 /usr/lib/x86_64-linux-gnu/{*clang*,*LLVM*} /home/linuxbrew

      - name: Build Packages
        uses: sbwml/openwrt-gh-action-sdk@helloworld
        env:
          ARCH: ${{ matrix.arch }}-${{ matrix.tag }}
          FEEDNAME: packages_ci
          PACKAGES: luci-app-adguardhome luci-app-airconnect luci-app-airplay2 luci-app-kucat-config luci-app-lucky luci-app-mentohust luci-app-mosdns luci-app-netspeedtest luci-app-partexp luci-app-quickfile luci-app-quickstart luci-app-ramfree luci-app-socat luci-app-store luci-app-unblockneteasemusic luci-app-usb-printer luci-app-webdav luci-app-wolplus luci-lib-iform luci-lib-taskd luci-lib-xterm luci-theme-argon luci-theme-aurora luci-theme-kucat lucky mentohust mosdns quickfile quickstart speedtest-cli taskd
          NO_REFRESH_CHECK: true
          IGNORE_ERRORS: true

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: ${{ matrix.tag }}-${{ matrix.arch }}
          path: bin/packages/${{ matrix.arch }}/packages_ci/*.ipk
          
      - name: Zip packages
        run: |
          zip -j ${{ matrix.arch }}-${{ matrix.tag }}.zip bin/packages/${{ matrix.arch }}/packages_ci/*.ipk
          echo -e "## ðŸ“… æ›´æ–°è®¡åˆ’\n" > release.txt
          echo -e "- ðŸ•’ æ¯æ—¥è‡ªåŠ¨æ£€æµ‹ä¸Šæ¸¸æ›´æ–°\n" >> release.txt
          echo -e "- ðŸ”„ å¦‚æœ‰å˜åŠ¨åˆ™è‡ªåŠ¨è§¦å‘åŒæ­¥æŽ¨é€\n" >> release.txt
          echo -e "- ðŸ“¬ ä¿æŒä¸Žä¸Šæ¸¸ä»“åº“çš„ç‰ˆæœ¬ä¸€è‡´æ€§\n" >> release.txt

      - name: Upload packages
        uses: ncipollo/release-action@main
        with:
          token: ${{ secrets.ACCESS_TOKEN }}
          artifacts: "${{ matrix.arch }}-${{ matrix.tag }}.zip"
          allowUpdates: true
          replacesArtifacts: true
          bodyFile: "release.txt"
          tag: ${{ matrix.arch }}
          
      - name: Upload FTP
        uses: sbwml/FTP-Deploy-Action@master
        with:
          server: ${{ secrets.ftp_address }}
          username: ${{ secrets.ftp_username }}
          password: ${{ secrets.ftp_password }}
          server-dir: opkg/${{ matrix.tag }}/${{ matrix.arch }}/
          local-dir: bin/packages/${{ matrix.arch }}/packages_ci/
          dangerous-clean-slate: true

      - name: Create metadata
        run: |
          sshpass -p ${{ secrets.server_password }} ssh -p 6466 -o StrictHostKeyChecking=no root@${{ secrets.ftp_address }} "echo ok"
          sshpass -p ${{ secrets.server_password }} ssh -p 6466 -o StrictHostKeyChecking=no root@${{ secrets.ftp_address }} "bash kmod-sign /home/zhao/opkg/${{ matrix.tag }}/${{ matrix.arch }}"
